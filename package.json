{
  "build": {
    "appId": "com.nikoszz.winutils",
    "productName": "Windows Utilities",
    "copyright": "Copyright Â© 2022 ${author}",
    "extends": null,
    "asar": true,
    "asarUnpack": "**\\*.{node,dll}",
    "directories": {
      "buildResources": "public"
    },
    "win": {
      "target": "nsis",
      "icon": "public/favicon.ico",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "uninstallDisplayName": "Windows Utilities Uninstaller",
      "artifactName": "${productName} Setup v${version}.${ext}",
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": false,
      "installerIcon": "public/favicon.ico",
      "uninstallerIcon": "public/favicon.ico"
    }
  },
  "publishConfig": {
    "detectUpdateChannel": true
  },
  "name": "windows-utilities",
  "version": "1.0.1",
  "description": "Simple windows utility tool.",
  "repository": "github:nikosszzz/windows-app",
  "main": "./build/electron.js",
  "homepage": "./",
  "scripts": {
    "lint": "eslint . --fix",
    "start": "craco start",
    "build": "craco build"
  },
  "keywords": [],
  "author": "nikoszz",
  "license": "ISC",
  "devDependencies": {
    "@craco/craco": "6.4.3",
    "@swc/helpers": "^0.4.3",
    "@tauri-apps/cli": "^1.1.1",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.11.41",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.5",
    "@types/react-router-dom": "^5.3.3",
    "craco-swc": "^0.5.1",
    "react-scripts": "^5.0.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@tauri-apps/api": "^1.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.3.0"
  },
  "browserslist": {
    "production": [
      "last 1 chrome version"
    ],
    "development": [
      "last 1 chrome version"
    ]
  }
}